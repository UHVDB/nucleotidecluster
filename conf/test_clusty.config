/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run UHVDB/nucleotidecluster -profile test_mcl,<docker/singularity>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 2,
        memory: '7.GB',
        time: '1.h',
    ]
}

params {
    config_profile_name         = 'Test Clusty'
    config_profile_description  = 'Minimal test dataset to check Clusty clustering'

    // Input data
    input_fna       = "https://github.com/refresh-bio/vclust/raw/refs/heads/main/example/multifasta.fna"
    chunk_size      = 5
    output          = "nucleotidecluster_test"
    cluster         = "clusty"
    remove_tmp      = false
}
